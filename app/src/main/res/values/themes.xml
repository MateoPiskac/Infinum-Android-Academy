<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shows" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="login_text">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="input_text">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="shows_list_title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="header">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviewAuthor">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#52368C</item>
    </style>

    <style name="reviewBody">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviews">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviewRating">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="empty_space">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#808080</item>
    </style>

</resources>