<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shows" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="login_text">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="input_text">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="shows_list_title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="header">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviewAuthor">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#52368C</item>
    </style>

    <style name="reviewBody">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviews">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="reviewRating">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="empty_space">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_open</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_close</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_shape</item>
    </style>

    <style name="CustomTextInputLayoutReview" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>